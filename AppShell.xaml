<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppMobile"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        />
        
        <ShellContent
        Title="About"
        ContentTemplate="{DataTemplate local:AboutPage}"
        />

        <ShellContent
        Title="My WishLists"
        ContentTemplate="{DataTemplate local:MyWishLists}"
        />

        <ShellContent
        Title="Our products"
        ContentTemplate="{DataTemplate local:ProductPage}"
        />

        <ShellContent
        Title="My Suppliers"
        ContentTemplate="{DataTemplate local:SupplierEntryPage}"
        />
    </TabBar>

</Shell>
